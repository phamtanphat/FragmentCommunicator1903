<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/buttonMain"
        android:layout_centerHorizontal="true"
        android:text="Button main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/linearlayout"
        android:orientation="vertical"
        android:layout_below="@id/buttonMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:layout_marginTop="20dp"
            android:name="com.ptp.phamtanphat.fragmentcommunicator1903.FragmentAndroid"
            android:id="@+id/fragmentAndroid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <fragment
            android:layout_marginTop="50dp"
            android:name="com.ptp.phamtanphat.fragmentcommunicator1903.FragmentiOS"
            android:id="@+id/fragmentiOS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>